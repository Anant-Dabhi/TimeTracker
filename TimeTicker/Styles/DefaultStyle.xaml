        <Setter Property="Source" Value="Images/List.png"></Setter>
    </Style>
    <Style x:Key="imgArrDown" TargetType="Image">
        <Setter Property="Source" Value="Images/arrow_down.png"></Setter>
    </Style>
    <Style x:Key="imgArrUP" TargetType="Image">
        <Setter Property="Source" Value="Images/arrow_up.png"></Setter>
    </Style>
    <Style x:Key="imgClose" TargetType="Image">
        <Setter Property="Source" Value="Images/Close.png"></Setter>
    </Style>
    <Style x:Key="imgClose1" TargetType="Image">
        <Setter Property="Source" Value="Images/Close_1.png"></Setter>
    </Style>
    <Style x:Key="imgBell" TargetType="Image">
        <Setter Property="Source" Value="Images/Bell.png"></Setter>
    </Style>
    <Style x:Key="ImgMail" TargetType="Image">
        <Setter Property="Source" Value="Images/Mail.png"></Setter>
    </Style>

    <Style x:Key="NotificationIcon" TargetType="Image">
        <Setter Property="Source" Value="Images/notification-icon.png"></Setter>
    </Style>

    

    <Style x:Key="mnItem1" TargetType="Image">
        <Setter Property="Source" Value="Images/Favorite.png"></Setter>
